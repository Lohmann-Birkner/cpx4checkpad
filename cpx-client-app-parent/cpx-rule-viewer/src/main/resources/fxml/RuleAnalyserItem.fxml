<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="boxRoot" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="boxItemHeader" alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <Button fx:id="btnItemExpand" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false" style="-fx-alignment: center;" styleClass="cpx-icon-button" />
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="lblItemTitle" maxWidth="-Infinity" minWidth="-Infinity" text="Label" />
                        <Label fx:id="lblItemDivider" maxWidth="-Infinity" minWidth="-Infinity" text=":" />
                    </children>
                </HBox>
                <Label fx:id="lblItemText" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Label" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnDelete" mnemonicParsing="false" styleClass="cpx-icon-button" />
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </HBox>
        <FlowPane fx:id="fpItems" hgap="5.0" vgap="5.0">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </FlowPane>
    </children>
</VBox>
