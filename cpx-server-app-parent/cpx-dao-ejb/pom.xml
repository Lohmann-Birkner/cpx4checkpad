    <build>
        <finalName>cpx-dao-ejb</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <!-- default compiler config, shows all warnings and fork build-->
                <!--                <configuration>
                    <source>11</source>
                    <target>11</target>
